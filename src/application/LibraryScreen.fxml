<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LibraryController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <left>
            <VBox prefWidth="280.0" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="TOP_LEFT" text="Available Books" />
                  <ListView fx:id="listView" onMouseClicked="#bookSelected" />
               </children>
            </VBox>
         </left>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="selectedBookTitleLabel" text="Title:" />
                  <Label fx:id="selectedBookAuthorLabel" text="Author:" />
                  <Label fx:id="selectedBookPublishedYearLabel" text="Year Published:" />
                  <Label fx:id="selectedBookNumAvailableLabel" text="# Available:" />
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>

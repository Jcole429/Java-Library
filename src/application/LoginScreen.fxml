<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
   <children>
      <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Login" />
            <Label contentDisplay="TOP" text="Username:" />
            <TextField fx:id="usernameTextField" />
            <Label text="Password:" />
            <PasswordField fx:id="passwordTextField" maxHeight="20.0" />
            <Label fx:id="errorLabel" textFill="RED" />
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#login" text="Login" />
                  <Button mnemonicParsing="false" onAction="#newUser" text="New User" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
